					do {

						System.out.println("Opção inválida!");
						System.out.println(" Escolha uma das opções: (1 - SIM / 2 - NÃO )");
						op2 = Integer.parseInt(s.nextLine());

					} while (op2 <= 0 || op2 > 2);

				}

				if (op == 2) sairLoop = true;
				if (op == 1) sairLoop = false;

			} while (sairLoop = false);

		} 

